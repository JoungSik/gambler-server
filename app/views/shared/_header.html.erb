<header class="p-3 bg-dark text-white sticky-top">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path, class: "nav-link px-2 text-white" %></li>
        <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
        <li><a href="#" class="nav-link px-2 text-white">About</a></li>
      </ul>
      <div class="text-end">
        <% if user_signed_in? %>
          <%= link_to "로그아웃", destroy_user_session_path, class: "btn btn-outline-light me-2" %>
        <% else %>
          <%= link_to "로그인", new_session_path(resource_name), class: "btn btn-outline-light me-2" %>
          <%= link_to "회원가입", new_registration_path(resource_name), class: "btn btn-outline-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</header>